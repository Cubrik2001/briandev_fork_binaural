<odoo>
    <!-- Extensión de la vista de formulario de Factura (account.move) -->
    <record id="view_move_form_discount_info" model="ir.ui.view">
        <field name="name">account.move.form.discount.info</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Mostrar el campo Tipo de Cliente del partner para referencia -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_id" invisible="1"/>
                <field name="customer_type" 
                       string="Tipo de Cliente" 
                       readonly="1"
                       invisible="move_type != 'out_invoice'"/>
            </xpath>
            <!-- Muestra el porcentaje de descuento en la línea de factura (ya existe en Odoo,
                 pero aseguramos que se muestre) -->
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="discount" groups="account.group_account_manager,account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>